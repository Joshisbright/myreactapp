modules = ["nodejs-20"]
[deployment]
run = ["sh", "-c", "node dist/index.js"]
build = ["sh", "-c", "npm run build"]

[[deployment.rewrites]]
from = "/*"
to = "/index.html"

[[deployment.responseHeaders]]
path = "/*"
name = "Cache-Control"
value = "no-store"

[workflows]
runButton = "Run Dev Server"

[[workflows.workflow]]
name = "Run Dev Server"
author = 40780561
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd AdMaioraWebsite && npm run dev"
